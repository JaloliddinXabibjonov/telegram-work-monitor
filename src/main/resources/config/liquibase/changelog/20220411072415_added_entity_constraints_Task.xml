<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">
    <!--
        Added the constraints for entity Task.
    -->
    <changeSet id="20220411072415-2" author="jhipster">

        <addForeignKeyConstraint baseColumnNames="task_id"
                                 baseTableName="rel_task__profession"
                                 constraintName="fk_task_id"
                                 referencedColumnNames="id"
                                 referencedTableName="task"/>

        <addForeignKeyConstraint baseColumnNames="profession_name"
                                 baseTableName="rel_task__profession"
                                 constraintName="fk_profession_name"
                                 referencedColumnNames="name"
                                 referencedTableName="profession"/>

        <addForeignKeyConstraint baseColumnNames="job_id"
                                 baseTableName="task"
                                 constraintName="fk_job_id"
                                 referencedColumnNames="id"
                                 referencedTableName="job"/>

        <addForeignKeyConstraint baseColumnNames="task_info_id"
                                 baseTableName="task"
                                 constraintName="fk_task_info_id"
                                 referencedColumnNames="id"
                                 referencedTableName="task_info"/>
    </changeSet>
</databaseChangeLog>
