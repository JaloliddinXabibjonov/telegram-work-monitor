<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--
        Added fields to entity User.
    -->
    <changeSet id="added_fields_to_user_entity" author="asliddin">
        <addColumn tableName="jhi_user">
            <column name="chatId" type="varchar"/>

            <column name="phoneNumber" type="varchar(24)"/>

            <column name="tgUsername" type="varchar"/>

            <column name="confirmed" type="boolean" defaultValueBoolean="false"/>

            <column name="confirmedDate" type="timestamp"/>

            <column name="tempTableId" type="bigint"/>

            <column name="busy" type="boolean" defaultValueBoolean="false"/>

            <column name="state" type="varchar(255)"/>

            <column name="extraTableId" type="bigint"/>
        </addColumn>
    </changeSet>
</databaseChangeLog>
