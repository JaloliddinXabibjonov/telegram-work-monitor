<?xml version="1.0" encoding="utf-8"?>
<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.6.xsd">

    <!--
        Added relationship profession to entity User.
    -->
    <changeSet id="added_relationship_profession_to_user" author="asliddin">
        <createTable tableName="user_profession">
            <column name="user_id" type="bigint">
                <constraints nullable="false"/>
            </column>
            <column name="profession_name" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <addPrimaryKey columnNames="user_id, profession_name" tableName="user_profession"/>

        <addForeignKeyConstraint baseColumnNames="profession_name"
                                 baseTableName="user_profession"
                                 constraintName="fk_profession_name"
                                 referencedColumnNames="name"
                                 referencedTableName="profession"/>

        <addForeignKeyConstraint baseColumnNames="user_id"
                                 baseTableName="user_profession"
                                 constraintName="fk_user_id"
                                 referencedColumnNames="id"
                                 referencedTableName="jhi_user"/>
    </changeSet>
</databaseChangeLog>
